<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/video_styles.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <script>
      const ROOM_ID = "<%= room %>";
      const user = "<%= currentUser.id %>";
      const userName = "<%= currentUser.displayName %>";
    </script>
    <script
      src="https://unpkg.com/peerjs@1.4.5/dist/peerjs.min.js"
      defer
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <script src="/js/script.js" defer></script>
    <script
      src="https://kit.fontawesome.com/1610bf3bf1.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body>
    <div class="h-screen flex">
      <div id="main-left" class="bg-black flex flex-[0.8] flex-col my-1">
        <div
          id="main-videos"
          class="flex justify-center items-center flex-grow"
        >
          <div id="video-grid"></div>
        </div>
        <div id="main-controls" class="bg-gray-200 block">
          <div class="flex justify-center">
            <div class="main-controls-button border border-black m-2">
              <button id="main-mute-btn" class="scale-150">
                <i class="fa-solid fa-microphone rounded-xl "></i>
              </button>
            </div>
            <div class="main-controls-button m-2 border border-black">
              <button id="main-video-btn" class="scale-150">
                <i class="fa-solid fa-video rounded-xl"></i>
              </button>
            </div>
            <div class="main-controls-button m-2 border border-black bg-red-400">
              <button id="main-call-drop">
                <i class="fa-solid fa-phone-slash scale-150"></i>
              </button>
            </div>
          </div>
        </div>
      </div>

      <div
        id="main-right"
        class="bg-gray-800 flex flex-[0.2] flex-col justify-end"
      >
        <div>
          <ul class="" id="messages"></ul>
        </div>
        <div class="w-full flex justify-center">
          <input
            type="text"
            id="message"
            placeholder="Type your message here..."
            class="h-12 p-1 rounded-lg flex-grow"
            name="message"
          />
          <button type="submit" id="send-message" class="flex-grow rounded-lg">
            <div
              class="flex flex-col border-2 border-black bg-white p-1 text-sm text-center justify-center"
            >
              <i class="fa-solid fa-paper-plane"></i>
              <span>Send</span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </body>
</html>
